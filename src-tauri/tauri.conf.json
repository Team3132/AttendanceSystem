{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "attendance",
	"version": "0.1.0",
	"identifier": "com.team3132.attendance",
	"build": {
		"frontendDist": "https://attendance.team3132.com",
		"devUrl": "http://localhost:1420",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "attendance",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false,
				"url": "/",
				"devtools": true
			}
		],
		"security": {
			"csp": null
		},
		"withGlobalTauri": true
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["attendance"]
			}
		}
	}
}
